# vim:syntax=bash:tabstop=4:shiftwidth=4:expandtab:smartindent

# https://wiki.archlinux.org/title/Bash/Prompt_customization
# https://wiki.ubuntuusers.de/Bash/Prompt/

# TODO: make this script standalone rather than sourced

__set_theme() {
    local RESET user colon directory
    RESET='\[\033[00m\]'
    RESET+='\[\e[00m\]'

    if [ "$1" = yes ]; then
       	user='\[\033[01;32m\]'
        directory='\[\033[01;34m\]'
    fi
    
    user+='\u@\h'
    colon+=':'
    directory+='\w'
    
    if [ "$1" = yes ]; then
        user+="${RESET}"
        colon+="${RESET}"
        directory+="${RESET}"
    fi

    # https://askubuntu.com/questions/372849/what-does-debian-chrootdebian-chroot-do-in-my-terminal-prompt
    PS1='${debian_chroot:+($debian_chroot)}'
    PS1+="${user}"
    PS1+="${colon}"
    PS1+="${directory}"
    PS1+='\n> '
}

__set_theme $@
#PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\>\$ '
